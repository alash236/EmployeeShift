<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.p01.dao.LeaveDetailDao">
	<!--新增請假明細 -->
	<insert id="addLeaveDetail">
		insert into leave_detail
		(leave_id,leave_date,start_time,end_time,leave_hours)
		values
		<foreach collection="list" item="detail" separator="," >
			(#{detail.leaveId}, #{detail.leaveDate}, #{detail.startTime},
			#{detail.endTime}, #{detail.leaveHours})
		</foreach>
	</insert>
	
	
	
	<select id="countLeaveTimeByIdandDate" resultType="int">
		select count(*)
		from leave_detail ld
		join leave_application la on ld.leave_id = la.leave_id
		where la.employee_id = #{employeeId}
		and ld.leave_date between #{startDate} and #{endDate}
	</select>
</mapper>